#include <unistd.h>

void	ft_is_negative(int n)
{
	if (n >= 0)
		write(1, "P", 1);
	else
		write(1, "N", 1);
}

int		main(void)
{
	int num_p;
	int num_n;

	num_p = 2;
	num_n = -2;

	ft_is_negative(num_p);	
	ft_is_negative(num_n);
}
